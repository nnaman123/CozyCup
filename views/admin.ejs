<!doctype html>
<html>
<head><meta charset="utf-8"><title>Admin - CozyCup</title><link rel="stylesheet" href="/css/styles.css"></head>
<body>
  <header class="topbar"><h1>CozyCup Admin</h1><nav><a href="/">Home</a> | <a href="/logout">Logout</a></nav></header>
  <main class="container">
    <h2>Orders</h2>
    <% if (orders.length === 0) { %>
      <p>No orders yet.</p>
    <% } %>
    <table class="orders">
      <thead><tr><th>When</th><th>User</th><th>Title</th><th>Status</th><th>Actions</th></tr></thead>
      <tbody>
      <% orders.forEach(o => { %>
        <tr>
          <td><%= o.createdAt.toISOString() %></td>
          <td><%= o.userEmail %></td>
          <td><%= o.title %></td>
          <td><%= o.status %></td>
          <td>
            <form method="post" action="/admin/order/<%= o._id %>/update" style="display:inline">
              <input type="hidden" name="action" value="approve">
              <input name="price" placeholder="price" />
              <input name="comments" placeholder="comments" />
              <button type="submit">Approve</button>
            </form>
            <form method="post" action="/admin/order/<%= o._id %>/update" style="display:inline">
              <input type="hidden" name="action" value="disapprove">
              <input name="comments" placeholder="comments" />
              <button type="submit">Disapprove</button>
            </form>
          </td>
        </tr>
      <% }) %>
      </tbody>
    </table>
  </main>
</body>
</html>
